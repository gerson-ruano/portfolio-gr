---
import config from 'astro-i18next.config.js';
const { locales, defaultLocale } = config;
---

<button id="themeToggle" class="p-2 icon-link theme-toggle" title="Toggle light & dark" aria-label="Toggle theme">
  <img src="/assets/svg/icons/sun.svg" class="w-8 h-8 theme-icon sun-icon" alt="Light mode" />
  <img src="/assets/svg/icons/moon.svg" class="w-8 h-8 theme-icon moon-icon" alt="Dark mode" />
</button>

<style is:inline>
  /* Mostrar/ocultar iconos basado en data-theme */
  .theme-icon {
    display: none;
  }
  
  html[data-theme="light"] .sun-icon,
  html[data-theme="dark"] .moon-icon {
    display: block;
  }
  
  /* Fallback para cuando no hay data-theme */
  html:not([data-theme]) .sun-icon {
    display: block;
  }
  html:not([data-theme]) .moon-icon {
    display: none;
  }
</style>